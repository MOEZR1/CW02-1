pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the GitHub repository
                git 'https://github.com/MOEZR1/CW02-1.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build the Docker image with the tag "node-app:1.0"
                script {
                    def dockerImage = docker.build("node-app:1.0")
                }
            }
        }

        stage('Test Docker Image') {
            steps {
                // You can add testing steps here if needed
                // For example, running unit tests
                sh 'echo "Running unit tests"'
            }
        }

        stage('Push Docker Image to DockerHub') {
            steps {
                // Push the image to DockerHub
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        docker.image("node-app:1.0").push()
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                // Update the Kubernetes deployment
                script {
                    sh 'kubectl set image deployment/node-app node-app=moezr/node-app:1.0'
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful'
        }
        failure {
            echo 'Deployment failed'
        }
    }
}

